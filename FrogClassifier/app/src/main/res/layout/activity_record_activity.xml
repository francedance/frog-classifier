<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jae.frogclassifier.record_activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="RECORD"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />

    <Button
        android:layout_width="200px"
        android:layout_height="100px"
        android:text="START"
        android:id="@+id/start_bttn"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200px"
        android:layout_height="100px"
        android:text="STOP"
        android:id="@+id/button2"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/start_bttn"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200px"
        android:layout_height="100px"
        android:text="RESET"
        android:id="@+id/reset_bttn"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

    <Button
        android:layout_width="200px"
        android:layout_height="100px"
        android:text="SAVE"
        android:id="@+id/save_bttn"
        android:layout_below="@+id/reset_bttn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

    <Button
        android:layout_width="200px"
        android:layout_height="100px"
        android:text="CLASSIFY"
        android:id="@+id/classify_bttn"
        android:layout_below="@+id/save_bttn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />
</RelativeLayout>
