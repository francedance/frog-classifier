<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frog Classifier"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="60px"
        android:textStyle="bold"/>

    <Button
        android:layout_width="200px"
        android:layout_height="100px"
        android:text="RECORD"
        android:id="@+id/record_bttn"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:onClick="record_bttn" />

    <Button
        android:layout_width="200px"
        android:layout_height="100px"
        android:text="Previous\n Records"
        android:id="@+id/precord_bttn"
        android:layout_below="@+id/record_bttn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp" />

    <Button
        android:layout_width="200px"
        android:layout_height="100px"
        android:text="SHARE"
        android:id="@+id/share_bttn"
        android:layout_below="@+id/precord_bttn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />

    <Button
        android:layout_width="200px"
        android:layout_height="100px"
        android:text="HELP"
        android:id="@+id/help_bttn"
        android:layout_below="@+id/share_bttn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />
</RelativeLayout>
